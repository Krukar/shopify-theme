<div class="customer-address__list row no-gutters">
{% for address in customer.addresses %}
    <div class="customer-address__item col-sm-12" data-form-id="{{ address.id }}">

      {% if address == customer.default_address %}
      <p><strong>{{ 'customer.addresses.default' | t }}</strong></p>
      {% endif %}

      {{ address | format_address }}    

      <button type="button" class="js-toggle button" data-form-id="{{ address.id }}" aria-controls="edit_address_{{ address.id }}">
      {{ 'customer.addresses.edit' | t }}
      </button>
      <button type="button" class="address-delete button" data-form-id="{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
      {{ 'customer.addresses.delete' | t }}
      </button>

      <div id="edit_address_{{ address.id }}" class="d-none">            

        {% form 'customer_address', address %}

        <h4>{{ 'customer.addresses.edit_address' | t }}</h4>

        <div class="row">
            <div class="col-md-6">
              <div class="input">

                <label for="AddressLastName_{{ form.id }}" class="input__label">
                    {{ 'customer.addresses.first_name' | t }}
                </label>
                <input type="text"
                        class="input__element"
                        name="address[first_name]"
                        id="AddressFirstName_{{ form.id }}"
                        value="{{ form.first_name }}"
                        autocapitalize="words">
              </div>                        
            </div>
            <div class="col-md-6">
              <div class="input">
                <label for="AddressLastName_{{ form.id }}" class="input__label">
                    {{ 'customer.addresses.last_name' | t }}
                </label>
                <input type="text"
                        class="input__element"
                        name="address[last_name]"
                        id="AddressLastName_{{ form.id }}"
                        value="{{ form.last_name }}"
                        autocapitalize="words">
              </div>      
            </div>
            <div class="col-sm-12">
              <div class="input">
                <label for="AddressCompany_{{ form.id }}" class="input__label">
                    {{ 'customer.addresses.company' | t }}
                </label>
                <input type="text"
                        class="input__element"
                        name="address[company]"
                        id="AddressCompany_{{ form.id }}"
                        value="{{ form.company }}"
                        autocapitalize="words">
              </div>
            </div>
            <div class="col-sm-12">
              <div class="input">
                <label for="AddressAddress1_{{ form.id }}" class="input__label">
                    {{ 'customer.addresses.address1' | t }}
                </label>
                <input type="text"
                        class="input__element"
                        name="address[address1]"
                        id="AddressAddress1_{{ form.id }}"
                        value="{{ form.address1 }}"
                        autocapitalize="words">
              </div>
            </div>
            <div class="col-sm-12">
              <div class="input">
                <label for="AddressAddress2_{{ form.id }}" class="input__label">
                    {{ 'customer.addresses.address2' | t }}
                </label>
                <input type="text"
                        class="input__element"
                        name="address[address2]"
                        id="AddressAddress2_{{ form.id }}"
                        value="{{ form.address2 }}"
                        autocapitalize="words">
              </div>                
            </div>
            <div class="col-md-6">
              <div class="input">
                <label for="AddressCity_{{ form.id }}" class="input__label">
                    {{ 'customer.addresses.city' | t }}
                </label>
                <input type="text"
                        class="input__element"
                        name="address[city]"
                        id="AddressCity_{{ form.id }}"
                        value="{{ form.city }}"
                        autocapitalize="words">
              </div>
            </div>
            <div class="col-md-6">
              <div class="select">
                <label for="AddressCountry_{{ form.id }}" class="select__label">
                    {{ 'customer.addresses.country' | t }}
                </label>
                <select name="address[country]"
                        id="AddressCountry_{{ form.id }}"
                        class="address-country-option select__element"
                        data-form-id="{{ form.id }}"
                        data-default="{{ form.country }}">
                  {{ country_option_tags }}
                </select>
              </div>
            </div>      
            <div id="AddressProvinceContainer_{{ form.id }}" class="select address-province-container col-md-6">
              <label for="AddressProvince_{{ form.id }}" class="select__label">
              {{ 'customer.addresses.province' | t }}
              </label>
              <select name="address[province]"
                      id="AddressProvince_{{ form.id }}"
                      class="select__element address-province-option"
                      data-default="{{ form.province }}">
              </select>
            </div>                                 
            <div class="col-md-6">
              <div class="input">
                <label for="AddressZip_{{ form.id }}" class="input__label">
                {{ 'customer.addresses.zip' | t }}
                </label>
                <input type="text"
                        class="input__element"
                        name="address[zip]"
                        id="AddressZip_{{ form.id }}"
                        value="{{ form.zip }}"
                        autocapitalize="characters">              
              </div>                         
            </div>
            <div class="col">
              <div class="input">
                <label for="AddressPhone_{{ form.id }}" class="input__label">
                {{ 'customer.addresses.phone' | t }}
                </label>
                <input type="tel"
                        class="input__element"
                        name="address[phone]"
                        id="AddressPhone_{{ form.id }}"
                        value="{{ form.phone }}"
                        pattern="[0-9\-]*">
              </div>
            </div>
            <div class="col-sm-12">             
              <div class="input checkbox default-address__checkbox">
                {{ form.set_as_default_checkbox }}
                <label class="checkbox__label" for="address_default_address_{{ form.id }}">
                    {{ 'customer.addresses.set_default' | t }}
                </label>
              </div>                       
            </div>
            <div class="col-sm-12">           
              <div class="input">
                  <input type="submit" class="button" value="{{ 'customer.addresses.update' | t }}">
                  <button type="button" class="address-edit-toggle button" data-form-id="{{ form.id }}">
                    {{ 'customer.addresses.cancel' | t }}
                  </button>
              </div>      
            </div>  
        </div> 
                                                    
        {% endform %}            

      </div>

    </div> 

{% endfor %}

</div>
