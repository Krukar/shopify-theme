{% comment %}

    Customer Reset Password

    - Customers are directed to this page after recieving a reset password email

    - On success they are logged into their account.
      
{% endcomment %}

<div class="container">
    <div class="row">
        <div class="col">
            {% form 'reset_customer_password' %}
            
            <h1>{{ 'customer.reset_password.title' | t }}</h1>
            
            <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
                        
            {{ form.errors | default_errors }}

            <div class="row">
                <div class="col-sm-6">
                    {% assign resetPasswordLabel = 'customer.reset_password.password' | t %}
                    {% include 'input' 
                    with id: 'ResetPassword',
                    type: 'password',
                    name: 'customer[password]',
                    label: resetPasswordLabel,
                    class: 'input__element', 
                    placeholder: resetPasswordLabel,
                    required: true
                    %}
                </div>
                <div class="col-sm-6">         
                    {% assign resetPasswordConfirmLabel = 'customer.reset_password.password_confirm' | t %}
                    {% include 'input' 
                    with id: 'PasswordConfirmation',
                    type: 'password',
                    name: 'customer[password_confirmation]',
                    label: resetPasswordConfirmLabel,
                    class: 'input__element', 
                    placeholder: resetPasswordConfirmLabel, 
                    required: true
                    %}                    
                </div>        
            </div>
            <div class="row">
                <div class="col">
                    {% assign resetSubmitButton = 'customer.reset_password.submit' | t %}
                    {% include 'button' with class: 'button', text: resetSubmitButton, type: 'submit' %}
                </div>
            </div>
            {% endform %}
        </div>
    </div>
</div>
